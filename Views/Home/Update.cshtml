@model EF_DotNetCore.Models.UpdateEmployee


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Update</title>
</head>
<body class="bg-white">


<hr />
<div class="container mt-1">
        <form enctype="multipart/form-data" asp-action="Update" asp-controller="Home" class="  ">
        <div class="row">
            <div class="col-6 border-end border-1 border-dark">
                
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <label asp-for="ID" class="form-label h6"></label>
                    <input asp-for="ID" class="form-control" disabled value="@Model.ID" />
                    <div class="form-group">
                        <br />
                        <label asp-for="Name" class="control-label h6"></label>
                        <input asp-for="Name" class="form-control " value="@Model.Name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div><br />
                    <div class="form-group">
                        <label asp-for="Address" class="control-label h6"></label>
                        <input asp-for="Address" class="form-control " value="@Model.Address" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div><br />
                    <div class="form-group">
                        <label asp-for="Salary" class="control-label h6"></label>
                        <input asp-for="Salary" class="form-control " value="@Model.Salary" />
                        <span asp-validation-for="Salary" class="text-danger"></span>
                    </div><br />
                    <div class="form-group">
                        <label asp-for="DateOfBirth" class="control-label h6"></label>
                        <input type="date" asp-for="DateOfBirth" class="form-control " value="@Model.DateOfBirth" />
                        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                    </div><br />
                    <div class="form-group">
                        <label asp-for="Department" class="form-label h6"></label>
                        <select asp-for="Department" class="form-select" asp-items="@Html.GetEnumSelectList<Dept>()">
                            <option value="@Model.Department"></option>
                        </select>
                    </div>
                    
                   
                    <div class="form-group mt-5 d-grid">
                        <button type="submit" value="Save" class="btn btn-dark ">Save</button>
                    </div>
                
            </div>
            <div class="col-6  rounded">
                    <div class="row ">
                    <div class="col-10 mx-auto mb-1">
                            @if(@Model.PhotoPath==null)
                            {
                            <img src="~/Photos/AvatarImage.png"  class="img-thumbnail img-fluid " />
                            }
                            else{
                            <img src="~/Images/@Model.PhotoPath"  class="img-thumbnail img-fluid " />
                            }
                       
                        </div>
                    </div>
                <div class="row">
                    <div class="col-12">
                        <div class="mb-2">
                            <form enctype="multipart/form-data" method="post" asp-action="Create" asp-controller="Home">
                                <input asp-for="Photo" class="form-control" type="file">
                            </form>
                        </div>
                        <div class="form-group mt-4 d-grid">
                            <a asp-action="Contact" asp-controller="Home" class="btn btn-dark ">Cancel</a>
                        </div>
                    </div>
                </div>
             <div>
                    
                </div>
            </div>
        </div>
        </form>
</div>
<hr />



</body>
</html>
