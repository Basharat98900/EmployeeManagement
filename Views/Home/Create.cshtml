<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>
    <div class="row pt-5">
        <div class="col-3  mx-auto border border-1 border-dark rounded">

            <form enctype="multipart/form-data" class="p-3" method="post" asp-controller="Home" asp-action="Create">
                @* <label class="form-label" asp-for="ID">ID</label>
                <input class="form-control" asp-for="ID" />
                <span class="text-danger" asp-validation-for="ID"></span>
                <br />*@
                <label class="form-label" asp-for="Name">Name</label>
                <input class="form-control" asp-for="Name" />
                <span class="text-danger" asp-validation-for="Name"></span>
                <br />
                <label class="form-label" asp-for="Address">Address</label>
                <input class="form-control" asp-for="Address" />
                <span class="text-danger" asp-validation-for="Address"></span>
                <br />
                <label class="form-label" asp-for="Salary">Salary</label>
                <input class="form-control" asp-for="Salary" />
                <span class="text-danger" asp-validation-for="Salary"></span>
                <br />
                <label class="form-label" asp-for="DateOfBirth">DateOfBirth</label>
                <input type="date" class="form-control" asp-for="DateOfBirth" />
                <span class="text-danger" asp-validation-for="DateOfBirth"></span>
                <br />
                <div class="form-group">
                    <label asp-for="Department" class="form-label"></label>
                    <select asp-for="Department" class="form-select" asp-items="@Html.GetEnumSelectList<Dept>()">
                        <option >Please Select</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label asp-for="Photo"  class="form-label">Multiple files input </label>
                    <input asp-for="Photo" class="form-control" type="file"  >
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>

        </div>
    </div>
</body>
</html>
