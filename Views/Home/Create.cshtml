    <form style="background-color: #2779e2;" method="post" enctype="multipart/form-data" asp-action="Create" asp-controller="Home">
        <section class="">
            <div class="container h-100">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-xl-9">

                        <h1 class="text-white mt-3 mb-4">Create Employee</h1>

                        <div class="card" style="border-radius: 15px;">
                            <div class="card-body">

                                <div class="row align-items-center pt-4 pb-3">
                                    <div class="col-md-3 ps-5">

                                        <h6 class="mb-0">Full Name</h6>

                                    </div>
                                    <div class="col-md-9 pe-5">

                                        <input asp-for="Name" type="text" class="form-control form-control-lg" placeholder="FullName" />
                                        <span class="text-danger" asp-validation-for="Name"></span>
                                    </div>
                                </div>

                                <hr class="mx-n3">

                                <div class="row align-items-center py-3">
                                    <div class="col-md-3 ps-5">

                                        <h6 class="mb-0">Address</h6>

                                    </div>
                                    <div class="col-md-9 pe-5">

                                        <input asp-for="Address" class="form-control form-control-lg" placeholder="example:HNO:124 XYZ" />
                                        <span class="text-danger" asp-validation-for="Address"></span>
                                    </div>
                                </div>

                                <hr class="mx-n3">

                                <div class="row align-items-center py-3">
                                    <div class="col-md-3 ps-5">

                                        <h6 class="mb-0">Salary</h6>

                                    </div>
                                    <div class="col-md-9 pe-5">

                                        <input asp-for="Salary" class="form-control form-control-lg" placeholder="Salary" />
                                        <span class="text-danger" asp-validation-for="Salary"></span>
                                    </div>
                                </div>

                               <hr class="mx-n3">

                                 <div class="row align-items-center py-3">
                                    <div class="col-md-3 ps-5">

                                    <h6 class="mb-0">Department</h6>

                                    </div>
                                    <div class="col-md-9 pe-5">

                                        <select asp-for="Department" class="form-select" asp-items="@Html.GetEnumSelectList<Dept>()">
                                             <option >Please Select</option>
                                        </select>
                                        <span class="text-danger" asp-validation-for="Department"></span>
                                        </div>
                                    </div>

                                <hr class="mx-n3">



                                <div class="row align-items-center py-3">
                                    <div class="col-md-3 ps-5">

                                        <h6 class="mb-0">DateOfBirth</h6>

                                    </div>
                                    <div class="col-md-9 pe-5">

                                        <input asp-for="DateOfBirth" class="form-control form-control-lg" type="date" placeholder="DOB" />
                                        <span class="text-danger" asp-validation-for="DateOfBirth"></span>
                                    </div>
                                </div>

                                <hr class="mx-n3">

                                <div class="row align-items-center py-3">
                                    <div class="col-md-3 ps-5">

                                        <h6 class="mb-0">Upload Photo</h6>

                                    </div>
                                    <div class="col-md-9 pe-5">

                                        <input asp-for="Photo" class="form-control form-control-lg" id="formFileLg" type="file" />
                                        <span class="text-danger" asp-validation-for="Photo"></span>
                                    </div>
                                </div>

                                <hr class="mx-n3">

                                <div class="px-5 py-4">
                                    <button type="submit" class="btn btn-primary btn-lg">Submit</button>
                                </div>

                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </section>
  </form>

</body>
