@model EF_DotNetCore.Models.LogIn
@{
    
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>View</title>
    <script src="~/Images/lib/jquery/jquery.js"></script>
    <script src="~/Images/lib/jquery-validate/jquery.validate.js"></script>
    <script src="~/Images/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
</head>
<body>
    <div class="row pt-5">
        <div class="col-3  mx-auto border border-1 border-dark rounded">
            <form class="p-3" method="post" asp-controller="Home" asp-action="LogIn">
               <label asp-for="UserName" class="form-label"></label>
               <input asp-for="UserName" class="form-control" />
               <span class="text-danger" asp-validation-for="UserName"></span>
               <br />

               <label asp-for="Password" class="form-label"></label>
               <input asp-for="Password" class="form-control" />
               <span class="text-danger" asp-validation-for="Password"></span>
               <br />
               <div class="d-grid gap-1">
                    <button type="submit" class="btn btn-block btn-primary">Submit</button>
                    <br />
                    <a class="text-decoration-none btn btn-info btn-block" asp-action="" asp-controller="">AdminLogin</a>
               </div>
            </form>
        </div>
    </div>
</body>
</html>
