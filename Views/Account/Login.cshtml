@model LoginView
@{
    ViewBag.title = "RegisterUser";
}
<html>
<head>
    <title>
    </title>
</head>
<body class="bg-black">

    <div class="container ">
        <div class="row mt-5">
            <div class="col-5 m-auto">
                <form class="mt-2 p-5 border border-white border-1 rounded-3" method="post" >
                    <p  class="h3 mt-0 pb-5 pt-0 text-light">Login</p>
                    <div class="container text-danger" asp-validation-summary="All"></div>
                    <label asp-for="UserName" class="form-label text-white"></label>
                    <input asp-for="UserName" placeholder="UserName" class="form-control" />
                    <span class="text-danger" asp-validation-for="UserName"></span>
                    <br />
                    <br />
                    <label asp-for="Password" class="form-label text-white"></label>
                    <input asp-for="Password" placeholder="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                    <br />
                    
                    <div class="form-check">
                        <input type="checkbox" asp-for="RememberMe" class="form-check-input" />
                        <label asp-for="RememberMe" class="form-check-label text-white"></label>
                    </div>
                    <span asp-validation-for="RememberMe" class="text-danger"></span>
                    <br />
                   
                    <br />
                    <div class="d-grid">
                        <button type="submit" class="btn btn-dark btn-block ">Submit</button>
                    </div>
                </form>
            </div>
        </div>

    </div>

</body>
</html>