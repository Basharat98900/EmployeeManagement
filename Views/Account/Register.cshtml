@model RegisterUser
@{
    ViewBag.title = "RegisterUser";
}
<html>
    <head>
        <title>
        </title>

    </head>
    <body class="bg-black">
       
     <div class="container mt-5">
         <div class="row">
             <div class="col-5 m-auto">
                <form class="mt-2 p-5 border border-1 rounded-3 border-white" method="post" asp-action="Register" asp-controller="Account">
                    <p class="text-light mt-0 pt-0 pb-5 h3">Register</p>
                    <div class="container text-danger" asp-validation-summary="All"></div>
                    <label asp-for="UserName" class="form-label text-white"></label>
                    <input asp-for="UserName" placeholder="UserName" class="form-control" />
                    <span class="text-danger" asp-validation-for="UserName"></span>
                    <br />
                    <br />
                    <label class="form-label text-white" asp-for="Gender"></label>
                    <select asp-for="Gender" class="form-select" asp-items="@Html.GetEnumSelectList<Genders>()">
                        <option>Please Select</option>
                    </select>
                    <span class="text-bg-danger" asp-validation-for="Gender"></span>
                    <br />
                   
                    <br />
                    <label asp-for="Password" class="form-label text-white"></label>
                    <input asp-for="Password" placeholder="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                    <br />
                    <br />
                    <label asp-for="ConfirmPassword" class="form-label text-white"></label>
                    <input asp-for="ConfirmPassword" placeholder="ConfirmPassword" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    <br />
                    <br />
                    <div class="d-grid">
                        <button type="submit" class="btn btn-dark btn-block ">Suuubmit</button>
                    </div>
                </form>
             </div>
         </div>
        
     </div>
        
    </body>
</html>