@model IEnumerable<EF_DotNetCore.Models.ApplicaitonUsers>;


<html>
    <head>

    </head>
    <body class="bg-black">
        <div class="container col-8">
            <p class="h4 text-white mt-3">Create User</p>
            <a asp-action="Register" asp-controller="Account" class="btn btn-outline-light mb-5">Create User</a>
            @if(Model.Any())
            {
                foreach (var item in Model)
            {
                <div class="card mb-3">
                    <div class="card-header">
                        <p class="h6 ">ID: @item.Id</p>
                    </div>
                    <div class="card-body">
                        <p class="h6 ">Name: @item.UserName</p>
                        <p class="h6 ">Gender: @item.gender</p>

                    </div>
                    <div class="card-footer">
                        <div class="row">
                            <div class="col-3">
                                <div class="d-grid">
                                    <a asp-action="EditUser" asp-controller="Admin" asp-route-id="@item.Id" class="btn btn-dark">Edit</a>
                                </div>
                            </div>
                                <div class="col-3">
                                <form method="post" asp-action="DeleteUser" asp-controller="Admin" asp-route-id="@item.Id">
                                <div class="d-grid">

                                   <span id="delete_@item.Id"><a onclick="confirmDelete('@item.Id',true)" href="javascript:void()" class="btn d-block btn-dark">Delete</a></span>

                                        <span style="display:none;" id="confirmDelete_@item.Id">
                                            <span class="text-danger">Are you sure you want to Delete @item.UserName</span>
                                            <button type="submit" class="btn btn-dark">Yes</button>
                                            <a href="javascript:void();" onclick="confirmDelete('@item.Id',false)" class="btn btn-dark">No</a>
                                        </span>
                                </div>
                                </form>
                            </div>
                           
                        </div>
                    </div>
                </div>
            }
            }
            else
            {
            <div class="card">
                <div class="card-header">
                </div>
                <div class="card-body">
                    <p class="h6 ">None at the moment</p>

                </div>
                <div class="card-footer">
                </div>
            </div>
            }
        </div>
        @section Scripts{
            <script src="~/CustomJavaScript/JavaScript.js"></script>
        }
    </body>
</html>