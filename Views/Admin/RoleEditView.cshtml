
@model RoleEditModel

<body class="bg-black">
    <div class="container col-6 mt-2 p-3 border border-white rounded">

        <p class="text-white h1">Edit Role</p>
        <form method="post" class="mt-3" asp-action="RoleEditView">
            <label class="form-label text-white" asp-for="Id"></label>
            <input disabled class="form-control" asp-for="Id" />
            <br />
            <label class="form-label text-white" asp-for="RoleName"></label>
            <input placeholder="RoleName" class="form-control" asp-for="RoleName" />
            <br />
            <button type="submit" class="btn btn-dark">Submit</button>
            <button type="submit" class="btn btn-dark">Cancel</button>
        </form>
        <div class="card mt-5">
            <div class="card-header">
                <p class="h3">Users in this Role</p>
            </div>
            @if(Model.Users.Any())
            {
                <div class="card-body">
                    @foreach (var item in Model.Users)
                    {
                        <p class="h6">@item</p>
                    }
                </div>
            }
            else{
                <div class="card-body">
                    <p class="h4">None at the moment</p>
                </div>
            }
            <div class="card-footer">
               <div class="row">
                    <div class="col-6">
                        <div class="d-grid">
                            <a asp-action="EditUserInRole" asp-controller="Admin" asp-route-id="@Model.Id" class="btn d-block btn-dark">Add or Remove Users</a>
                        </div>
                    </div>
               </div>
            </div>
        </div>
    </div>
</body>