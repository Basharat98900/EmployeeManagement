
@model ClaimsViewModel

<html>
    <head></head>
    <body class="bg-black">
        <div class="container col-8 mt-4">
            <form method="post">
                <div class="card">
                    <div class="card-header">
                    </div>
                    <div class="card-body">
                        <input asp-for="UserID" type="hidden" />
                        @for (int i = 0; i < Model.Cliam.Count; i++)
                    {
                        <input type="hidden" asp-for="@Model.Cliam[i].ClaimType" />
                        
                        <input class="form-check-input" type="checkbox" asp-for="@Model.Cliam[i].IsSelected">
                        <label class="form-check-label" asp-for="@Model.Cliam[i].IsSelected">@Model.Cliam[i].ClaimType</label><br />
                    }
                    </div>
                    <div class="card-footer">
                        <input type="submit" value="Update" class="btn btn-dark" />
                        <a asp-action="EditUser" class="btn btn-dark" asp-controller="Admin" asp-route-id="@Model.UserID">Cancel</a>
                    </div>
                </div>
            </form>
        </div>
    </body>
</html>